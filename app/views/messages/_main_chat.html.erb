<div class="chat_top">
  <div class="chat_vew">
    hogefuga
  </div>
  <div class="chat_end">
    <%=link_to 'チャットを終了する' , '#'%>
  </div>
</div>

<div class="chat_main">
   <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], class: 'chat_bottom', local: true do |f| %>
  <div class="form_input">
    <%= f.text_field :message, class: 'message_form', placeholder: 'type a message' %>
    <label class="image_form">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form_submit' %>
<% end %>
